<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarLibroActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingBottom="15dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Titulo"
                tools:layout_editor_absoluteX="76dp"
                tools:layout_editor_absoluteY="49dp" />

            <EditText
                android:id="@+id/editTextTextTitlo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Titulo"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="82dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Resumen"
                tools:layout_editor_absoluteX="76dp"
                tools:layout_editor_absoluteY="49dp" />

            <EditText
                android:id="@+id/editTextTexResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Resumen"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="82dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Autor"
                tools:layout_editor_absoluteX="76dp"
                tools:layout_editor_absoluteY="49dp" />

            <EditText
                android:id="@+id/editTextTextAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="82dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Fecha de publicacion"
                tools:layout_editor_absoluteX="76dp"
                tools:layout_editor_absoluteY="49dp" />

            <EditText
                android:id="@+id/editTextFechaPublicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Fecha de publicacion"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="82dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Tienda 1"
                tools:layout_editor_absoluteX="76dp"
                tools:layout_editor_absoluteY="49dp" />

            <EditText
                android:id="@+id/editTextTextTienda1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Tienda 1"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="82dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Tienda 2"
                tools:layout_editor_absoluteX="76dp"
                tools:layout_editor_absoluteY="49dp" />

            <EditText
                android:id="@+id/editTextTextTeineda2"
